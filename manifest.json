{
    "manifest_version": 3,
    "name": "Pivot Guard",
    "description": "Privacy Breach Notification Extension",
    "version": "1.0.0",
    "action": {
        "default_popup": "status.html",
        "default_icon": "icons/shield-virus-solid.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "storage",
        "scripting"
    ]
}